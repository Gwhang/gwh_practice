#订单表
CREATE TABLE `order_info` (
  `id` varchar(32) NOT NULL COMMENT '订单号',
  `user_id` int(11) DEFAULT NULL COMMENT '用户ID',
  `item_id` int(11) DEFAULT NULL COMMENT '购买商品id',
  `item_price` decimal(10,2) DEFAULT NULL COMMENT '商品价格',
  `amount` int(10) DEFAULT NULL COMMENT '订单数量\r\n\r\n',
  `order_price` decimal(10,2) DEFAULT NULL COMMENT '订单价格',
  `promo_id` int(11) DEFAULT '0',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;
#库存表
CREATE TABLE `item_stock` (
  `id` int(11) NOT NULL AUTO_INCREMENT COMMENT '主键',
  `stock` int(11) DEFAULT NULL COMMENT '销量',
  `item_id` int(11) DEFAULT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=3 DEFAULT CHARSET=utf8;

#商品表
CREATE TABLE `item` (
  `id` int(11) NOT NULL AUTO_INCREMENT COMMENT '主键',
  `title` varchar(64) DEFAULT NULL COMMENT '商品名称',
  `price` decimal(12,2) DEFAULT NULL COMMENT '商品价格',
  `description` varchar(255) DEFAULT NULL COMMENT '商品描述',
  `sales` int(12) DEFAULT NULL COMMENT '销量',
  `img_url` varchar(255) DEFAULT NULL COMMENT '商品图片地址',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=3 DEFAULT CHARSET=utf8;
#秒杀商品表
CREATE TABLE `promo` (
  `id` int(11) NOT NULL AUTO_INCREMENT COMMENT '主键',
  `promoName` varchar(255) DEFAULT NULL COMMENT '秒杀活动名称',
  `start_date` datetime DEFAULT NULL COMMENT '秒杀活动的开始时间',
  `item_id` int(11) DEFAULT NULL COMMENT '秒杀活动使用的商品',
  `promo_item_price` decimal(10,2) DEFAULT NULL COMMENT '秒杀活动的商品价格',
  `end_date` datetime DEFAULT NULL COMMENT '描述结束时间',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=2 DEFAULT CHARSET=utf8;
#序列号表
CREATE TABLE `sequence_info` (
  `name` varchar(255) NOT NULL COMMENT '名称',
  `current_value` int(11) DEFAULT '0' COMMENT '序类号',
  `step` int(11) DEFAULT '0' COMMENT '步长',
  PRIMARY KEY (`name`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;
#用户表
CREATE TABLE `user_info` (
  `id` int(11) NOT NULL AUTO_INCREMENT COMMENT '主键',
  `name` varchar(64) NOT NULL COMMENT '用户名',
  `gender` tinyint(2) NOT NULL COMMENT '性别 1代表男性，0代表女性',
  `age` int(3) DEFAULT NULL COMMENT '年龄',
  `telphone` varchar(64) DEFAULT NULL COMMENT '手机号码',
  `register_mode` varchar(255) DEFAULT NULL COMMENT '注册途径 1.手机号注册 2.微信注册',
  `third_party_id` varchar(64) DEFAULT NULL COMMENT '三方账号ID 比如微信：OPENID',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=5 DEFAULT CHARSET=utf8 COMMENT='用户主表\r\n密码不应该与主表同存在';
#用户密码表
CREATE TABLE `user_password` (
  `id` int(11) NOT NULL AUTO_INCREMENT COMMENT '主键',
  `encrpt_password` varchar(255) DEFAULT NULL COMMENT '密码（加密）',
  `user_id` int(11) NOT NULL COMMENT '用户表ID',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=5 DEFAULT CHARSET=utf8;
